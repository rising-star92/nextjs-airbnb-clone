datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt   DateTime  @default(now())
  firstName   String?
  id          String    @id @default(cuid())
  lastName    String?
  listings    Listing?  @relation(fields: [listingsId], references: [id])
  listingsId  String?
  password    String
  roles       Json
  trips       Trip?     @relation(fields: [tripsId], references: [id])
  tripsId     String?
  updatedAt   DateTime  @updatedAt
  username    String    @unique
  wishlists   Wishlist? @relation(fields: [wishlistsId], references: [id])
  wishlistsId String?
}

model Listing {
  createdAt        DateTime   @default(now())
  description      String
  id               String     @id @default(cuid())
  listingCreatedBy User[]
  locationData     Json
  locationType     String
  mapData          Json
  photos           Json
  placeAmeneites   Json
  placeSpace       Json
  placetype        String
  price            Int
  title            String
  trips            Trip[]
  updatedAt        DateTime   @updatedAt
  wishlists        Wishlist[]
}

model Wishlist {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  listing   Listing[]
  updatedAt DateTime  @updatedAt
  user      User[]
}

model Trip {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  listing   Listing[]
  updatedAt DateTime  @updatedAt
  user      User[]
}
